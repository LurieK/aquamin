{
	"name": "aquamin",
	"version": "3.0.2",
	"description": "Parcel build tool for Aquamarine",
	"private": true,
	"engines": {
		"nodeVersion": ">=16.13.2",
		"npmVersion": ">=7.11.2"
	},
	"config": {
		"lint_paths": "./blocks ./components",
		"build_paths": "./*/*.bundle.js ./blocks/block-library/*/*script.js ./blocks/block-library/*/*style.css",
		"watch_paths": "./dist/**/*.css,./dist/**/*.js,./**/*.php"
	},
	"scripts": {
		"start": "npm-run-all --parallel parcel watch $npm_package_config_build_paths server",
		"build": "npm run clean && parcel build $npm_package_config_build_paths --no-cache && npm run build:post",
		"build:post": "npm run assets; npm run lint",
		"assets": "del ./dist/assets/* && ncp ./assets ./dist/assets --filter '**/*.*'",
		"server": "browser-sync start --logFileChanges=`grep LOG_FILE_CHANGES= .env | cut -d '=' -f2` --no-open --proxy `grep URL= .env | cut -d '=' -f2` --files $npm_package_config_watch_paths",
		"docs:server": "browser-sync start --no-open --proxy='http://127.0.0.1:4001/aquamin/' --files='./docs/'",
		"docs": "cd ./docs; jekyll serve --config _config_local.yml --port 4001",
		"lint": "eslint $npm_package_config_lint_paths",
		"lint:fix": "eslint $npm_package_config_lint_paths --fix",
		"clean": "del ./.parcel-cache/*"
	},
	"author": "@tcmulder",
	"license": "ISC",
	"@parcel/transformer-css": {
		"drafts": {
			"nesting": true,
			"customMedia": true
		}
	},
	"browserslist": "> 0.25%, last 2 versions, not dead",
	"devDependencies": {
		"@parcel/resolver-glob": "^2.9.3",
		"@wordpress/icons": "^9.29.0",
		"browser-sync": "^2.29.3",
		"classnames": "^2.3.2",
		"del-cli": "^5.0.0",
		"eslint-config-wesbos": "^3.2.3",
		"ncp": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.9.3",
		"process": "^0.11.10",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}
