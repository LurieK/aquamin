{
	"apiVersion": 3,
	"title": "Grid",
	"description": "Flexible grid layout.",
	"text-domain": "aquamin",
	"name": "aquamin/grd",
	"icon": "feedback",
	"category": "aquamin-blocks",
	"example": {},
	"attributes": {
		"count": {
			"type": "array",
			"default": [4, 2, 1]
		},
		"hasEqualRows": {
			"type": "boolean",
			"default": false
		},
		"hasMedia": {
			"type": "boolean",
			"default": false
		},
		"hasAspect": {
			"type": "boolean",
			"default": false
		},
		"minAspect": {
			"type": "array",
			"default": [0, 0]
		}
	},
	"supports": {
		"customClassName": true,
		"align": ["wide", "full"],
		"color": {
			"text": true,
			"background": true
		},
		"spacing": {
			"margin": ["top", "bottom"],
			"padding": true,
			"blockGap": ["horizontal", "vertical"]
		}
	}
}
